
#include<iostream>
using namespace std;
Class Node{
        private:
          int data;
          Node*next;
        public:
           Node(){
               data=0;
               next=NULL;
              }
          Node(int data;Node*next){
           This->data=data;
           This->next=next;
         }
          void setData(int data){
           This->data=data;
           }
          void setNext(Node*next){
            This->next=next;
          }
          int getData(){
           return data;
          }
          Node*getnext (){
          return this->next;
          }
        };
          int main(){
             Node n1(2);
             Node n2(3);
             cout<<n1.getData();
             cout<<n2.getnext();
             court<<n2.getData();
             cout<<n1.setnext (&n2);
             return 0;
            }
    
